{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "ES2019",
    "module": "ESNext",
    "outDir": "dist",
    "lib": ["DOM", "dom.iterable", "ESNext"],
    "jsx": "react",
    "sourceMap": false,
    "rootDir": "src",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
